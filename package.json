{
  "name": "pdf-editor-app",
  "version": "1.0.0",
  "description": "Windows 11 PDF編集アプリケーション",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently -n \"VITE,ELECTRON\" -c \"cyan,magenta\" \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:win": "npm run build && npm run build:electron && electron-builder --win",
    "preview": "vite preview"
  },
  "keywords": [
    "pdf",
    "editor",
    "electron",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.11.174",
    "@pdf-lib/fontkit": "^1.1.1",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.10.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "tailwindcss": "^3.3.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3"
  }
}
